<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="31dp"
            android:layout_marginRight="31dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/VaxTrax"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vax Trax"
                android:textSize="30sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_below="@+id/VaxTrax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information on the COVID-19 Pandemic"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/logo"
                android:layout_alignParentRight="true"
                android:src="@drawable/vaxtrax"
                android:layout_width="61dp"
                android:layout_height="61dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="COVID-19 Information"
                android:textStyle="bold"
                android:layout_below="@+id/logo"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="What Is COVID-19?" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/covidInfo"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:text="How Should We Keep Safe?" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/homeGuidelines"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statsBtn"
                        android:background="@drawable/custom_button"
                        android:textColor="#00a2ff"
                        android:layout_marginTop="30dp"
                        android:text="@string/view_covid_19_statistics" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>