<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".VaccinesDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="31dp"
        android:layout_marginRight="31dp">

        <TextView
            android:id="@+id/VaxTrax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vax Trax"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/VaxTrax"
            android:layout_marginTop="6dp"
            android:text="@string/information_on_the_covid_19_pandemic"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/vaxtrax" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:text="@string/vaccine_development"
            android:textColor="#FFFFFF"
            android:id="@+id/vacdev"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ib_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacdev"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-36dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/circle"
            app:srcCompat="@android:drawable/ic_menu_help" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

    <TextView
        android:textColor="#000000"
        android:id="@+id/tv_name"
        android:text="Name: "
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/type_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:text="Type: " />

            <TextView
                android:textColor="#000000"
                android:id="@+id/tv_type"
                android:text="type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/stage_display"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Stage: "
        android:layout_gravity="left" />


            <TextView
                android:textColor="#000000"
                android:id="@+id/tv_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="stage"
                android:layout_marginEnd="25dp" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/info_display"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Description: "
        android:layout_gravity="left"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="desc"
        android:layout_gravity="left" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>